<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>, <small><%= time_tag post.created_at, "data-local": "time-ago" %></small>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

  <p>
    <small><%= pluralize post.comments.count, "comment" %></small>
  </p>

</div>
